# BillFusion Frontend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Base URL for the billing service API (includes authentication)
# Development: http://localhost:8001
# Production: https://api.yourdomain.com
VITE_API_BASE_URL=http://localhost:8001

# API request timeout in milliseconds (default: 10000 = 10 seconds)
VITE_API_TIMEOUT=10000

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Token storage key prefix (used for localStorage keys)
VITE_AUTH_STORAGE_KEY=billfusion_auth

# Automatic token refresh buffer in seconds (refresh token before it expires)
# Default: 300 seconds (5 minutes before expiry)
VITE_TOKEN_REFRESH_BUFFER=300

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=BillFusion

# Application version
VITE_APP_VERSION=1.0.0

# Application environment (development, staging, production)
VITE_APP_ENV=development

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable debug mode for detailed console logging
VITE_DEBUG_MODE=false

# Enable Google OAuth login
VITE_ENABLE_GOOGLE_AUTH=false

# Enable two-factor authentication
VITE_ENABLE_2FA=false

# Enable password strength indicator
VITE_ENABLE_PASSWORD_STRENGTH=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Default language (en, es, fr, etc.)
VITE_DEFAULT_LANGUAGE=en

# Default timezone
VITE_DEFAULT_TIMEZONE=UTC

# Items per page for pagination
VITE_ITEMS_PER_PAGE=10

# =============================================================================
# GOOGLE OAUTH CONFIGURATION (if enabled)
# =============================================================================
# Get these from Google Cloud Console
# VITE_GOOGLE_CLIENT_ID=your-google-client-id
# VITE_GOOGLE_REDIRECT_URI=http://localhost:5173/auth/google/callback

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Enable error tracking (e.g., Sentry)
# VITE_ENABLE_ERROR_TRACKING=false
# VITE_SENTRY_DSN=your-sentry-dsn

# Enable analytics (e.g., Google Analytics)
# VITE_ENABLE_ANALYTICS=false
# VITE_GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Port for development server (default: 5173)
# VITE_PORT=5173

# Enable hot module replacement
# VITE_HMR=true

# =============================================================================
# PRODUCTION SETTINGS (Override in production)
# =============================================================================
# VITE_API_BASE_URL=https://api.yourdomain.com
# VITE_APP_ENV=production
# VITE_DEBUG_MODE=false
# VITE_ENABLE_ERROR_TRACKING=true
# VITE_ENABLE_ANALYTICS=true

# =============================================================================
# NOTES
# =============================================================================
# - All environment variables must be prefixed with VITE_ to be exposed to the client
# - Never commit .env file to version control
# - Update .env.example when adding new environment variables
# - Restart the development server after changing environment variables
